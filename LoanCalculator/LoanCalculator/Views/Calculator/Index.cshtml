

<div class="container-xl px-4 mt-4">

    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-12">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Loan Application</div>
                <div class="card-body">
                    <form>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-9">
                                <label class="small mb-1" for="inputFirstName">Activity sector</label>
                                <input class="form-control" id="inputFirstName" type="text" placeholder="Activity sector">
                            </div>
                            <!-- Form Group (last name)-->
                            <div class="col-md-3">
                                <label class="small mb-1" for="inputLastName">Salary</label>
                                <input class="form-control" id="inputLastName" type="text" placeholder="Salary">
                            </div>
                        </div>

                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="cars">Work experience (years)</label>

                                <select class="form-control" name="cars" id="cars">
                                    @for (int i = 0; i <48 ; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="cars">Work experience (month)</label>

                                <select class="form-control" name="cars" id="cars">
                                    @for (int i = 0; i < 12; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (phone number)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputPhone">Region</label>
                                <input class="form-control" id="inputPhone" type="tel" placeholder="Region">
                            </div>
                            <!-- Form Group (birthday)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputBirthday">Business address</label>
                                <input class="form-control" id="inputBirthday" type="text" name="birthday" placeholder="Business address">
                            </div>
                        </div>

                        <div style="text-align:right">

                            <a style="color: white" class="btn btn-primary" asp-action="calculate" asp-controller="calculator">Calculate</a>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>